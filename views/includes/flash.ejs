<% if (success && success.length) { %>
  <% success.forEach(function(msg){ %>
    <div class="alert alert-success alert-dismissible fade show col-10 offset-1 col-md-6 offset-md-3 mt-3" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% }) %>
<% } %>

<% if (error && error.length) { %>
  <% error.forEach(function(msg){ %>
    <div class="alert alert-danger alert-dismissible fade show col-10 offset-1 col-md-6 offset-md-3 mt-3" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% }) %>
<% } %>

